<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_foto_acuse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.FotoAcuseActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="1">

        <Button
            android:id="@+id/button_foto_acuse_hacer_foto"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="352dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorBotonEntregadoPressed"
            android:elevation="0dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="12sp"
            android:text="@string/foto_acuse"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/cardview_dark_background"
            android:textColorLink="@color/colorBackgroundAusente"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </LinearLayout>

</LinearLayout>