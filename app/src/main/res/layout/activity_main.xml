<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.MainActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <include
        android:id="@+id/datos_sesion"
        layout="@layout/datos_sesion" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_cargar_reparto"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:background="@color/colorPrimary"
                android:text="@string/cargar_reparto"
                android:textAllCaps="false"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_resumen_reparto"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:background="@color/colorPrimary"
                android:text="@string/resumen_reparto"
                android:textAllCaps="false"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_nueva_notificacion"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:background="@color/colorPrimary"
                android:text="@string/nueva_notificacion"
                android:textAllCaps="false"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_cerrar_sesion"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@color/colorBackgroundAusente"
                android:elevation="0dp"
                android:padding="10dp"
                android:text="@string/titulo_logout"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="@string/titulo_logout" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>